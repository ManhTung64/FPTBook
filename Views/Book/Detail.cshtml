@model FPTBook.Models.Book

<div class="row text-center">
    <div class="col">
        <img src="@Model.Image" width="400" height="400">
    </div>
    <div class="col">
        <table class="table table-bordered bg-light">
            <tr>
                <th colspan="2" class="h3 text-primary">@Model.Title</th>
            </tr>
            <tr>
                <th>Author</th>
                <td>@Model.Author</td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>@Model.Publisher</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>@Model.Year</td>
            </tr>
            @*<tr>
                <th>Grade</th>
                <td>@Model.Grade</td>
            </tr>*@
            <tr>
                <th>Category</th>
                <td>
                    <a asp-controller="Category" asp-action="Info"
                       asp-route-id="@Model.Category.Id">
                        @Model.Category.Name
                    </a>
                </td>
            </tr>
        </table>
    </div>
</div>